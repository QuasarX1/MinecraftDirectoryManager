<Window x:Class="MinecraftDirectoryManagerWindowsDesktop.DirectoryUpdateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MinecraftDirectoryManagerWindowsDesktop"
        mc:Ignorable="d"
        Title="DirectoryUpdateWindow" Height="178.598" Width="420.684">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Label Content="Directory Name:" Grid.Column="0" Grid.Row="0"/>
        <TextBox Name="NameTextBox" Grid.Column="1" Grid.Row="0"/>
        
        <Label Content="Directory Path:" Grid.Column="0" Grid.Row="1"/>
        <TextBox Name="PathTextBox" Grid.Column="1" Grid.Row="1"/>
        
        <Button Name="UpdateButton" Content="Update" Grid.Column="0" Grid.Row="2" Click="UpdateButton_Click"/>
        <Button Name="CancelButton" Content="Cancel" Grid.Column="1" Grid.Row="2" Click="CancelButton_Click"/>
    </Grid>
</Window>
