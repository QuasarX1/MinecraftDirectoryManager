<Window x:Class="MinecraftDirectoryManagerWindowsDesktop.GetFilepathWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MinecraftDirectoryManagerWindowsDesktop"
        mc:Ignorable="d"
        Title="GetFilepathWindow" Height="106.859" Width="423.682">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Label Name="ContextLabel" Content="Path to File:" Grid.Column="0" Grid.Row="0"/>
        <TextBox Name="FilepathTextBox" Grid.Column="1" Grid.Row="0" Grid.ColumnSpan="2"/>
        <Button Name="SelectItemButton" Content="..." Grid.Column="3" Grid.Row="0" Click="SelectItemButton_Click"/>

        <Button Name="SubmitButton" Content="Submit" Grid.Column="0" Grid.Row="1" Click="SubmitButton_Click" Grid.ColumnSpan="2"/>
        <Button Name="CancelButton" Content="Cancel" Grid.Column="2" Grid.Row="1" Click="CancelButton_Click" Grid.ColumnSpan="2"/>
    </Grid>
</Window>
